@page
@model myEM.Pages.Skills.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Skills</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Skill[0].SkillName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Skill[0].Details)
            </th>
            <th>
                DateOfCreation (UTC)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Skill) 
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SkillName)
        </td>
        <td style="word-break:break-all;">
            @Html.DisplayFor(modelItem => item.Details)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateOfCreation)
        </td>
        <td>
            <a class="btn btn-outline-dark" asp-page="./Details" asp-route-id="@item.SkillID">
                <i class="fa fa-edit"></i>
            </a>
        </td>
    </tr>
    }
    </tbody>
</table>
