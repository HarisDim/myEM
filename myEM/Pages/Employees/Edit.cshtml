@page
@model myEM.Pages.Employees.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Employee</h4>
<hr />

<form method="post">
    <div class="row">
        <div class="col-md-4">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Employee.ID" />
            <div class="form-group">
                <label asp-for="Employee.FirstName" class="control-label"></label>
                <input asp-for="Employee.FirstName" class="form-control" />
                <span asp-validation-for="Employee.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.LastName" class="control-label"></label>
                <input asp-for="Employee.LastName" class="form-control" />
                <span asp-validation-for="Employee.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.HiringDate" class="control-label"></label>
                <input asp-for="Employee.HiringDate" class="form-control" />
                <span asp-validation-for="Employee.HiringDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Details" class="control-label"></label>
                <textarea asp-for="Employee.Details" class="form-control" style=" min-height: 140px;"></textarea>
                <span asp-validation-for="Employee.Details" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>

        </div>
        <div class="col-md-2">

        </div>
        <div class="col-md-6">
            <dl class="row">
                <dd class="col-sm-10">
                    <table class="table">
                        <tr>
                            <th>Skills</th>
                        </tr>
                        @foreach (var item in Model.Skills)
                        {
                            <tr>
                                <td>
                                    <input class="form-check-input" onclick="OnSkillCheck('@item.SkillID', this);" asp-for="@item.IsChecked"/> @Html.DisplayFor(model => item.SkillName)
                                </td>
                            </tr>
                        }
                    </table>
                </dd>
            </dl> 
        </div>
    </div>
</form>


<div>
    <a asp-page="./Details" asp-route-id="@Model.Employee.ID">Back to Details</a> |
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
